<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cuong.ant.ModPassword">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <EditText
            android:inputType="textPassword"
            android:id="@+id/edOldPassword09"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="The Old Pasword"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            />
        <EditText
            android:inputType="textPassword"

            android:layout_below="@id/edOldPassword09"
            android:id="@+id/edNewPassword09"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="New Pasword"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            />
        <EditText
            android:inputType="textPassword"

            android:layout_below="@id/edNewPassword09"
            android:id="@+id/edNewPassword091"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Confirm New Pasword "
            android:textAlignment="center"
            android:layout_centerHorizontal="true"/>
        <Button
            android:textColor="#ffffff"
            android:background="#FFFF5940"
            android:id="@+id/btnOk09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:layout_below="@id/edNewPassword091"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>
